/* Banner
 * ------------------------
 */
.slide
    .banner__slide__wrap
        position: relative;
        height: 720px

        //圖片
        .banner__img
            background-image: linear-gradient(40deg, #2147b1 40%, #0d2f8b 100%)
            transition: background 0.3s, border 0.3s, border-radius 0.3s, box-shadow 0.3s;
            height: 720px

        //文字
        .banner__caption
            position: absolute;
            text-align: center;
            top: 0
            right: 0
            left: 0
            bottom: 0
            height: 347px
            margin:auto

            //LOGO
            .brand
                color #fff

            .title,
            .subTitle
                font-weight: bold;
                color #fff

            //主標
            .title
                font-size: 35px
                font-weight: 600;
                text-transform uppercase

            //副標
            .subTitle
                font-size: 30px
                font-weight: 500;

            //副標小字
            p
                font-size: 15px;
                color: #7994de;
                margin-bottom: 40px;
                margin-top: 10px;
                transition .3s ease-in
                text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.32);

                &:hover
                    color #fff
                    transition .3s ease-in-out

        //Banner 按鈕
        .banner__btn
            a.btn
                background-color #FFF500
                transition .3s ease-in-out
                text-transform uppercase
                font-weight: bold;
                padding 10px 20px
                border-color  transparent

                &:hover
                    background-color #292F4E
                    transition .3s ease-in-out
                    color #fff
                    border-color  transparent
                    box-shadow 2px 2px 5px rgba(0,0,0,0.31)
