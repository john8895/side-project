
html, body, div, h1, h2, h3, h4, h5, h6, ul, ol, dl, li, dt, dd, p, blockquote, pre, form, fieldset, table, th, td
    margin: 0
    padding: 0
    box-sizing: border-box

img
    max-width: 100%
    height: auto

ol, ul
    list-style: none

// Style
.text-center
    text-align: center

.float-right
    float: right

// Mixin
btn-act()
    background-color: #fa5738
    padding: 8px 30px
    color: #fff
    font-size: 17px
    border-radius: 21px
    {block}
    &:hover
        text-decoration: underline
        background: linear-gradient(180deg, rgb(236, 141, 122), rgb(230, 57, 24))
        {block}

fontAwesome-icon(icon, fontFamily='FontAwesome')
    content icon
    font-family: fontFamily
    font-weight: 900
    -webkit-font-smoothing: antialiased
    display: inline-block
    font-style: normal
    font-variant: normal
    text-rendering: auto
    line-height: 1
    {block}

limitLeight()
    display: -webkit-box
    overflow: hidden
    text-overflow: ellipsis
    -webkit-box-orient: vertical
    {block}

// -webkit-line-clamp: 2;
// line-height: 1.5em;
// height: 71px;
s-hidden()
    breakpoint(s)
    display: none
    {block}

s-show()
    breakpoint(s)
    display: block
    {block}

jh-flex()
    display: -webkit-box
    display: -ms-flexbox
    display: flex
    {block}
clearfix()
    &::after
        display: block;
        content: "";
        clear: both;
        {block}

breakpoint($point)
    if $point == sl
        @media (min-width: 1921px)
            {block}
    else if $point == 1600
        @media (min-width: 1600px)
            {block}
    else if $point == 1440
        @media (min-width: 1440px)
            {block}
    else if $point == 1366
        @media (min-width: 1366px)
            {block}
    else if $point == xl
        @media (min-width: 1200px)
            {block}
    else if $point == lg
        @media (min-width: 992px)
            {block}
    else if $point == md
        @media (min-width: 768px)
            {block}
    else if $point == sm
        @media (min-width: 576px)
            {block}
    else if $point == xs
        @media (min-width: 415px)
            {block}
    else if $point == s
        @media (max-width: 414px)
            {block}
    else if $point == 375
        @media all and (min-width: 375px)
            {block}
    else if $point == 360
        @media all and (min-width: 360px)
            {block}
    else if $point == 320
        @media all and (min-width: 320px)
            {block}
    else if $point == 568
        @media (min-width: 568px) and (orientation: landscape)
            {block}
    else if $point == 1024
        @media (min-width: 1024px) and (orientation: landscape)
            {block}